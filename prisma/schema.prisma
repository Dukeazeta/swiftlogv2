generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH MODELS ====================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==================== USER MODELS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Usage tracking for rate limiting
  usageCount   Int      @default(0) @map("usage_count")
  usageResetAt DateTime @default(now()) @map("usage_reset_at")

  // Relations
  accounts Account[]
  sessions Session[]
  profile  StudentProfile?
  logs     WeeklyLog[]

  @@map("users")
}

model StudentProfile {
  id     String @id @default(cuid())
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Personal Info
  fullName String @map("full_name")

  // School Info
  schoolName       String @map("school_name")
  schoolDepartment String @map("school_department")

  // Company Info
  companyName       String @map("company_name")
  companyDepartment String @map("company_department")
  jobRole           String @map("job_role")

  // SIWES Duration
  startDate DateTime @map("start_date")
  endDate   DateTime @map("end_date")

  // Status
  isOnboarded Boolean @default(true) @map("is_onboarded")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("student_profiles")
}

// ==================== LOG MODELS ====================

model WeeklyLog {
  id     String @id @default(cuid())
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  weekNumber Int      @map("week_number")
  weekStart  DateTime @map("week_start")
  weekEnd    DateTime @map("week_end")

  summary String @db.Text

  entries  DailyLog[]
  versions LogVersion[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, weekNumber])
  @@map("weekly_logs")
}

model DailyLog {
  id          String    @id @default(cuid())
  weeklyLogId String    @map("weekly_log_id")
  weeklyLog   WeeklyLog @relation(fields: [weeklyLogId], references: [id], onDelete: Cascade)

  day     String // MONDAY, TUESDAY, WEDNESDAY, THURSDAY, FRIDAY
  date    DateTime
  content String   @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([weeklyLogId, day])
  @@map("daily_logs")
}

model LogVersion {
  id          String    @id @default(cuid())
  weeklyLogId String    @map("weekly_log_id")
  weeklyLog   WeeklyLog @relation(fields: [weeklyLogId], references: [id], onDelete: Cascade)

  version  Int
  snapshot Json

  createdAt DateTime @default(now()) @map("created_at")

  @@map("log_versions")
}
